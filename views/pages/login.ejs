<%- include('../partials/header') %>

    <form class="form-signin" action="/login" method="POST" novalidate>
      <div class="text-center mb-4 mt-5">
        <h1 class="mb-3 font-weight-bold">Admin Login</h1>
      </div>

      <div class="form-label-group">
        <input type="text" id="inputUser" name="inputUser" class="form-control" placeholder="User address" required autofocus>
        <label for="inputUser">Username</label>
      </div>

      <div class="form-label-group">
        <input type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="Password" required>
        <label for="inputPassword">Password</label>
      </div>

      <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
      <p class="mt-5 mb-3 text-muted text-center">&copy; 2018</p>
    </form>

</body>
</html>
